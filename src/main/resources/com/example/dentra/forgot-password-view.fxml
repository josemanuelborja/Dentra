<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="554.0" prefWidth="944.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dentra.ForgotPasswordController">

    <children>
        <BorderPane prefHeight="554.0" prefWidth="944.0">
            <right>
                <AnchorPane prefHeight="554.0" prefWidth="283.0" style="-fx-background-color: #61B5ED;" BorderPane.alignment="CENTER" />
            </right>

            <left>
                <AnchorPane prefHeight="554.0" prefWidth="660.0" BorderPane.alignment="CENTER">

                    <children>

                        <Label layoutX="238.0" layoutY="194.0" text="Forgot your Password?">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>

                        <!-- Input fields -->
                        <TextField layoutX="161.0" layoutY="277.0" prefHeight="46.0" prefWidth="364.0" promptText="Email" styleClass="primary-border" />

                        <Button fx:id="resetpasswordBtn" layoutX="230.0" layoutY="338.0" onAction="#handleresetpasswordClick" prefHeight="30.0" prefWidth="231.0" styleClass="primary-button" text="Reset Password">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></Button>

                        <Button fx:id="backToLoginBtn" layoutX="279.0" layoutY="385.0" mnemonicParsing="false" onAction="#handleBackToLoginClick" prefHeight="26.0" prefWidth="127.0" style="-fx-background-color: transparent;" text="← back to login" underline="true">
                            <font>
                                <Font name="Arial" size="12.0" />
                            </font>
                        </Button>
                  <Label layoutX="210.0" layoutY="224.0" prefHeight="24.0" prefWidth="272.0" style="-fx-text-fill: #B5AEAE;" text="A code will be sent to your email to help reset   ">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label layoutX="316.0" layoutY="248.0" style="-fx-text-fill: #B5AEAE;" text="Password">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="192.0" fitWidth="328.0" layoutX="-50.0" layoutY="-51.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@image/logo.png" />
                     </image></ImageView>
                    </children>
                </AnchorPane>
            </left>
        </BorderPane>
    </children>
</VBox>
