<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="554.0" prefWidth="944.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dentra.OtpController">

    <children>
        <BorderPane prefHeight="554.0" prefWidth="944.0">

            <!-- RIGHT BLUE PANEL -->
            <right>
                <AnchorPane prefWidth="283.0" style="-fx-background-color: #61B5ED;" />
            </right>

            <!-- LEFT CONTENT AREA -->
            <left>
                <AnchorPane prefHeight="554.0" prefWidth="660.0">

                    <children>

                        <!-- Logo -->
                        <ImageView fitHeight="192.0" fitWidth="328.0" layoutX="-50.0" layoutY="-51.0" preserveRatio="true">
                            <image>
                                <Image url="@image/logo.png" />
                            </image>
                        </ImageView>

                        <!-- Title -->
                        <Label layoutX="249.0" layoutY="199.0" text="Check your email">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>

                        <!-- Subtitle -->
                        <Label layoutX="247.0" layoutY="229.0" style="-fx-text-fill: #A3A3A3;" text="Input the code that was sent to" />

                        <!-- CODE BOXES -->
                        <HBox alignment="CENTER" layoutX="205.0" layoutY="265.0" prefHeight="69.0" prefWidth="249.0" spacing="10">
                            <children>
                                <TextField fx:id="code1" alignment="CENTER" prefHeight="50.0" prefWidth="50.0" style="-fx-font-size: 18px; -fx-border-radius: 5px; -fx-border-color: #C0C0C0;" />
                                <TextField fx:id="code2" alignment="CENTER" prefHeight="50.0" prefWidth="50.0" style="-fx-font-size: 18px; -fx-border-radius: 5px; -fx-border-color: #C0C0C0;" />
                                <TextField fx:id="code3" alignment="CENTER" prefHeight="50.0" prefWidth="50.0" style="-fx-font-size: 18px; -fx-border-radius: 5px; -fx-border-color: #C0C0C0;" />
                                <TextField fx:id="code4" alignment="CENTER" prefHeight="50.0" prefWidth="50.0" style="-fx-font-size: 18px; -fx-border-radius: 5px; -fx-border-color: #C0C0C0;" />
                            </children>
                        </HBox>

                        <!-- NEXT BUTTON -->
                        <Button fx:id="nextButton" layoutX="241.0" layoutY="341.0" onAction="#handleNextClick" prefHeight="30.0" prefWidth="177.0" styleClass="primary-button" text="Next" />

                        <!-- Resend + Back Links -->
                        <Label layoutX="229.0" layoutY="383.0" text="Didn't get any code?" />
                        <Hyperlink fx:id="resendLink" layoutX="340.0" layoutY="380.0" onAction="#handleResendClick" prefHeight="24.0" prefWidth="96.0" text="Click to Resend" underline="true">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></Hyperlink>
                        <Hyperlink fx:id="backToLoginLink" layoutX="278.0" layoutY="404.0" onAction="#handleBackToLoginClick" style="-fx-text-fill: black;" text="← back to login" />
                  <Label layoutX="274.0" layoutY="247.0" style="-fx-text-fill: #A3A3A3;" text="example@gmail.com" />

                    </children>
                </AnchorPane>
            </left>
        </BorderPane>
    </children>
</VBox>
