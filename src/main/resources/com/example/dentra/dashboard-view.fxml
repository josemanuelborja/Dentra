<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dentra.DashboardController">
    <left>
        <VBox id="sidebar" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Pane prefHeight="36.0" prefWidth="178.0">
                    <children>
                        <ImageView fitHeight="148.0" fitWidth="338.0" layoutX="-65.0" layoutY="-66.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@image/logo.png" />
                            </image>
                        </ImageView>
                    </children>
                </Pane>
            </HBox>
            <VBox id="nav-menu" spacing="5.0" VBox.vgrow="ALWAYS">
                <Button prefWidth="200.0" text="Dashboard">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="23.0" spacing="10.0">
                            <children>
                                <ImageView fitHeight="23.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/dashboard.png" />
                                    </image>
                                </ImageView>
                            </children></HBox>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-dashboard" />
                  <String fx:value="active" />
                  <String fx:value="active-dashboard" />
                    </styleClass></Button>
                <Button fx:id="staffBtn" onAction="#handleStaffClick" prefWidth="200.0" text="Staff">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="23.0" fitWidth="24.0" layoutX="-2.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/users.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-staff" />
                    </styleClass></Button>
                <Button fx:id="patientsBtn" onAction="#handlePatientsClick" prefWidth="200.0" text="Patients">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/users-group.png" />
                                    </image></ImageView>
                            </children>
                        </Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-patients" />
                    </styleClass></Button>
                <Button fx:id="salesBtn" onAction="#handleSalesClick" prefWidth="200.0" text="Sales">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/graph.png" />
                                    </image></ImageView>
                            </children>
                        </Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-sales" />
                    </styleClass></Button>
                <Button fx:id="purchasesBtn" onAction="#handlePurchasesClick" prefWidth="200.0" text="Purchases">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/credit-card.png" />
                                    </image>
                                </ImageView>
                            </children></Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-purchases" />
                    </styleClass></Button>
                <Button fx:id="balanceBtn" onAction="#handleBalanceClick" prefWidth="200.0" text="Balance">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/wallet.png" />
                                    </image>
                                </ImageView>
                            </children></Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-balance" />
                    </styleClass></Button>
                <Button fx:id="settingsBtn" onAction="#handleSettingsClick" prefWidth="200.0" text="Settings">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/settings.png" />
                                    </image>
                                </ImageView>
                            </children></Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-settings" />
                    </styleClass></Button>
            </VBox>
            <Button fx:id="logoutBtn" alignment="CENTER_LEFT" onAction="#handleLogOutClick" prefWidth="200.0" text="Log out">
                <graphic>
                    <Pane prefHeight="30.0" prefWidth="23.0">
                        <children>
                            <ImageView fitHeight="27.0" fitWidth="23.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                <image>
                                    <Image url="@image/logout.png" />
                                </image>
                            </ImageView>
                        </children></Pane>
                </graphic>
                <styleClass>
                    <String fx:value="nav-button" />
                    <String fx:value="nav-button-logouts" />
                </styleClass></Button>
        </VBox>
    </left>
    <center>
        <VBox id="main-content" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>

            <HBox alignment="CENTER_RIGHT" prefHeight="40.0">
                <Label styleClass="username-label" text="Ashton Lactuan" HBox.hgrow="ALWAYS" />
                <Button styleClass="profile-button" text="▼" />
            </HBox>

            <Label styleClass="dashboard-title" text="Dashboard" />

            <HBox spacing="30.0">
                <VBox id="profit-card" prefHeight="150.0" prefWidth="300.0" styleClass="data-card">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <Pane prefHeight="110.0" prefWidth="298.0">
                        <children>
                            <Label layoutY="71.0" prefHeight="50.0" prefWidth="161.0" styleClass="card-value" text="₱132,000" />
                            <Label layoutY="-10.0" prefHeight="70.0" prefWidth="131.0" styleClass="card-title" text="Profit this month" wrapText="true">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <ImageView fitHeight="58.0" fitWidth="60.0" layoutX="204.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@image/Peso%20Symbol.png" />
                                </image></ImageView>
                        </children>
                    </Pane>
                </VBox>
                <VBox id="balance-card" layoutX="10.0" layoutY="10.0" prefHeight="150.0" prefWidth="300.0" styleClass="data-card">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Pane prefHeight="110.0" prefWidth="298.0">
                            <children>
                                <Label layoutY="71.0" prefHeight="50.0" prefWidth="161.0" styleClass="card-value" text="₱132,000" />
                                <Label layoutY="-10.0" prefHeight="70.0" prefWidth="131.0" styleClass="card-title" text="Patients Total Balance" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ImageView fitHeight="58.0" fitWidth="60.0" layoutX="204.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@image/Frame.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </Pane>
                    </children>
                </VBox>
                <VBox id="patients-card" layoutX="340.0" layoutY="10.0" prefHeight="150.0" prefWidth="300.0" styleClass="data-card">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Pane prefHeight="110.0" prefWidth="298.0">
                            <children>
                                <Label layoutY="71.0" prefHeight="50.0" prefWidth="161.0" styleClass="card-value" text="₱132,000" />
                                <Label layoutY="-10.0" prefHeight="70.0" prefWidth="131.0" styleClass="card-title" text="Profit this month" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ImageView fitHeight="58.0" fitWidth="60.0" layoutX="204.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@image/Patients.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </Pane>
                    </children>
                </VBox>
            </HBox>

            <Label styleClass="section-title" text="Finance Status" />
            <TableView id="finance-table" fx:id="dashboardTable" prefHeight="350.0" prefWidth="1080.0">
                <columns>
                    <TableColumn fx:id="dateCol" prefWidth="150.0" text="Date" />
                    <TableColumn fx:id="typeCol" prefWidth="200.0" text="Transaction Type" />
                    <TableColumn fx:id="descCol" prefWidth="300.0" text="Description" />
                    <TableColumn fx:id="statusCol" prefWidth="150.0" text="Status" />
                    <TableColumn fx:id="amountCol" prefWidth="280.0" text="Amount" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
