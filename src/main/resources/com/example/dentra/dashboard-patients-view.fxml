<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dentra.DashboardPatientsController">
    <left>
        <VBox id="sidebar" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Pane prefHeight="36.0" prefWidth="178.0">
                    <children>
                        <ImageView fitHeight="148.0" fitWidth="338.0" layoutX="-65.0" layoutY="-66.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@image/logo.png" />
                            </image>
                        </ImageView>
                    </children>
                </Pane>
            </HBox>
            <VBox id="nav-menu" spacing="5.0" VBox.vgrow="ALWAYS">
                <Button fx:id="dashboardBtn" onAction="#handleDashboardClick" prefWidth="200.0" text="Dashboard">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="23.0" spacing="10.0">
                            <children>
                                <ImageView fitHeight="23.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/dashboard.png" />
                                    </image>
                                </ImageView>
                            </children></HBox>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-dashboard" />
                    </styleClass></Button>
                <Button fx:id="staffBtn" onAction="#handleStaffClick" prefWidth="200.0" text="Staff">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="23.0" fitWidth="24.0" layoutX="-2.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/users.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-staff" />
                    </styleClass></Button>
                <Button prefWidth="200.0" text="Patients">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/users-group.png" />
                                    </image></ImageView>
                            </children>
                        </Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-patients" />
                        <String fx:value="active" />
                        <String fx:value="active-patients" />
                    </styleClass></Button>
                <Button fx:id="salesBtn" onAction="#handleSalesClick" prefWidth="200.0" text="Sales">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/graph.png" />
                                    </image></ImageView>
                            </children>
                        </Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-sales" />
                    </styleClass></Button>
                <Button fx:id="purchasesBtn" onAction="#handlePurchasesClick" prefWidth="200.0" text="Purchases">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/credit-card.png" />
                                    </image>
                                </ImageView>
                            </children></Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-purchases" />
                    </styleClass></Button>
                <Button fx:id="balanceBtn" onAction="#handleBalanceClick" prefWidth="200.0" text="Balance">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/wallet.png" />
                                    </image>
                                </ImageView>
                            </children></Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-balance" />
                    </styleClass></Button>
                <Button prefWidth="200.0" text="Settings">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/settings.png" />
                                    </image>
                                </ImageView>
                            </children></Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-settings" />
                    </styleClass></Button>
            </VBox>
            <Button fx:id="logoutBtn" alignment="CENTER_LEFT" onAction="#handleLogOutClick" prefWidth="200.0" text="Log out">
                <graphic>
                    <Pane prefHeight="30.0" prefWidth="23.0">
                        <children>
                            <ImageView fitHeight="27.0" fitWidth="23.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                <image>
                                    <Image url="@image/logout.png" />
                                </image>
                            </ImageView>
                        </children></Pane>
                </graphic>
                <styleClass>
                    <String fx:value="nav-button" />
                    <String fx:value="nav-button-logouts" />
                </styleClass></Button>
        </VBox>
    </left>
    <center>
        <VBox id="main-content" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>

            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" />

            <Label prefHeight="46.0" prefWidth="169.0" styleClass="dashboard-title" text="Patients" />
            <HBox alignment="CENTER_LEFT" spacing="10">
                <StackPane style="-fx-background-color: #d9d9d9; -fx-padding: 5 10; -fx-background-radius: 2;">
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <Label prefHeight="20.0" prefWidth="26.0" style="-fx-font-size: 14px;" text="ðŸ”" />
                        <TextField fx:id="searchStaffField" prefWidth="250" promptText="Search Patient" style="-fx-background-color: transparent;                                           -fx-border-color: transparent;                                           -fx-prompt-text-fill: #8e8e8e;                                           -fx-font-size: 13px;" />
                    </HBox>
                </StackPane>
            <Button fx:id="addPatientBtn" mnemonicParsing="false" onAction="#handleAddPatientClick" prefHeight="34.0" prefWidth="141.0" text="Add Patient">
               <HBox.margin>
                  <Insets left="585.0" />
               </HBox.margin>
               <graphic>
                         <ImageView fitHeight="17.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
                             <image>
                                 <Image url="@image/circle-plus.png" /> <!-- make sure the file name matches -->
                             </image>
                         </ImageView>
               </graphic>
            </Button>
            </HBox>
            <TableView id="finance-table" fx:id="dashboardTable" prefHeight="350.0" prefWidth="1080.0">
                <columns>
                    <TableColumn fx:id="dateCol" prefWidth="150.0" text="Date" />
                    <TableColumn fx:id="typeCol" prefWidth="200.0" text="Patient" />
                    <TableColumn fx:id="descCol" prefWidth="300.0" text="Contact" />
                    <TableColumn fx:id="statusCol" prefWidth="150.0" text="Address" />
                    <TableColumn fx:id="amountCol" prefWidth="280.0" text="Amount" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
