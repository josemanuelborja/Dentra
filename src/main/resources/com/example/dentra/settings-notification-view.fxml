<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dentra.SettingsNotifcationController">
    <left>
        <VBox id="sidebar" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Pane prefHeight="36.0" prefWidth="178.0">
                    <children>
                        <ImageView fitHeight="148.0" fitWidth="338.0" layoutX="-65.0" layoutY="-66.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@image/logo.png" />
                            </image>
                        </ImageView>
                    </children>
                </Pane>
            </HBox>
            <VBox id="nav-menu" spacing="5.0" VBox.vgrow="ALWAYS">
                <Button fx:id="dashboardBtn" onAction="#handleDashboardClick" prefWidth="200.0" text="Dashboard">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="23.0" spacing="10.0">
                            <children>
                                <ImageView fitHeight="23.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/dashboard.png" />
                                    </image>
                                </ImageView>
                            </children></HBox>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-dashboard" />
                    </styleClass></Button>
                <Button fx:id="staffBtn" onAction="#handleStaffClick" prefWidth="200.0" text="Staff">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="23.0" fitWidth="24.0" layoutX="-2.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/users.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-staff" />
                    </styleClass></Button>
                <Button fx:id="patientsBtn" onAction="#handlePatientsClick" prefWidth="200.0" text="Patients">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/users-group.png" />
                                    </image></ImageView>
                            </children>
                        </Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-patients" />
                    </styleClass></Button>
                <Button fx:id="salesBtn" onAction="#handleSalesClick" prefWidth="200.0" text="Sales">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/graph.png" />
                                    </image></ImageView>
                            </children>
                        </Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-sales" />
                    </styleClass></Button>
                <Button fx:id="purchasesBtn" onAction="#handlePurchasesClick" prefWidth="200.0" text="Purchases">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/credit-card.png" />
                                    </image>
                                </ImageView>
                            </children></Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-purchases" />
                    </styleClass></Button>
                <Button fx:id="balanceBtn" onAction="#handleBalanceClick" prefWidth="200.0" text="Balance">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/wallet.png" />
                                    </image>
                                </ImageView>
                            </children></Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-balance" />
                    </styleClass></Button>
                <Button prefWidth="200.0" text="Settings">
                    <graphic>
                        <Pane prefHeight="30.0" prefWidth="23.0">
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="23.0" layoutX="-2.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                    <image>
                                        <Image url="@image/settings.png" />
                                    </image>
                                </ImageView>
                            </children></Pane>
                    </graphic>
                    <styleClass>
                        <String fx:value="nav-button" />
                        <String fx:value="nav-button-settings" />
                        <String fx:value="active" />
                        <String fx:value="active-settings" />
                    </styleClass></Button>
            </VBox>
            <Button fx:id="logoutBtn" alignment="CENTER_LEFT" onAction="#handleLogOutClick" prefWidth="200.0" text="Log out">
                <graphic>
                    <Pane prefHeight="30.0" prefWidth="23.0">
                        <children>
                            <ImageView fitHeight="27.0" fitWidth="23.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" styleClass="sidebar-item">
                                <image>
                                    <Image url="@image/logout.png" />
                                </image>
                            </ImageView>
                        </children></Pane>
                </graphic>
                <styleClass>
                    <String fx:value="nav-button" />
                    <String fx:value="nav-button-logouts" />
                </styleClass></Button>
        </VBox>
    </left>
    <center>
        <VBox spacing="20.0" styleClass="content-area" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>
            <children>
                <Label prefHeight="32.0" prefWidth="245.0" styleClass="content-title" text="Settings &gt; Notification" />
                <Separator prefWidth="200.0" />

                <HBox spacing="40.0" VBox.vgrow="ALWAYS">
                    <children>

                        <VBox prefWidth="200.0" spacing="5.0" styleClass="settings-nav">
                            <children>
                                <Label styleClass="settings-nav-header" text="Account" />
                                <Button fx:id="profileBtn" mnemonicParsing="false" onAction="#handleProfileClick" prefWidth="200.0" styleClass="settings-sidebar-button" text="My Profile">
                                    <graphic>
                                        <ImageView fitHeight="30.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@image/profile-user.png" />
                                            </image>
                                        </ImageView>
                                    </graphic></Button>
                                <Button mnemonicParsing="false" prefWidth="200.0" text="Notification">
                                    <graphic>
                                        <ImageView fitHeight="30.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@image/bell.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                           <styleClass>
                              <String fx:value="settings-sidebar-button" />
                              <String fx:value="active-notification-button" />
                           </styleClass></Button>
                                <Button fx:id="securityBtn" mnemonicParsing="false" onAction="#handleSecurityClick" prefWidth="200.0" styleClass="settings-sidebar-button" text="Security">
                                    <graphic>
                                        <ImageView fitHeight="30.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@image/security.png" />
                                            </image>
                                        </ImageView>
                                    </graphic></Button>
                            </children>
                        </VBox>
                        <Separator orientation="VERTICAL" prefHeight="546.0" prefWidth="0.0" />

                        <VBox spacing="25.0" styleClass="settings-form" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="section-title" text="Notification" />
                                <Separator prefWidth="200.0" />

                                <VBox prefWidth="714.0" spacing="5.0">
                                    <children>
                                        <Label text="Notify me when..." />
                                        <VBox spacing="10.0">
                                            <children>
                                                <CheckBox fx:id="newPatientCheck" text="When added new Patient." />
                                                <CheckBox fx:id="medicalHistoryCheck" text="A patient's Medical History is updated." />
                                                <CheckBox fx:id="paymentCheck" text="A Payment is Processed/Received through the online portal." />
                                            </children>
                                            <padding>
                                                <Insets left="20.0" top="10.0" />
                                            </padding>
                                        </VBox>
                                    </children>
                                </VBox>

                                <HBox alignment="CENTER_LEFT" prefWidth="714.0" spacing="10.0">
                                    <children>
                                        <VBox>
                                            <children>
                                                <Label styleClass="form-label-bold" text="Desktop Notification" />
                                                <Label styleClass="description-text" text="Receive desktop notifications whenever your organization requires your attention." />
                                            </children>
                                        </VBox>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <ToggleButton fx:id="desktopNotificationToggle" selected="true" styleClass="toggle-switch" text="" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="20.0" />
                                    </VBox.margin>
                                </HBox>

                                <Region VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>

</BorderPane>
