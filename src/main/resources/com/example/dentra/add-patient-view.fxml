<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" styleClass="root-pane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dentra.AddPatientController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <HBox alignment="TOP_RIGHT" spacing="10.0">
        <VBox HBox.hgrow="ALWAYS">
            <Label styleClass="title-text" text="Add New Patient" />
            <Label styleClass="subtitle-text" text="Enter Patient information to create a new patient record." />
        </VBox>
    </HBox>

    <VBox spacing="15.0">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
        <HBox styleClass="form-row">
            <VBox styleClass="form-field-group" HBox.hgrow="ALWAYS">
                <Label styleClass="form-label" text="Full Name*" />
                <TextField fx:id="fullNameField" promptText="Enter patient's full name" />
            </VBox>
            <VBox styleClass="form-field-group" HBox.hgrow="ALWAYS">
                <Label styleClass="form-label" text="Gender*" />
                <ComboBox fx:id="genderComboBox" prefWidth="300.0" promptText="Select Gender" />
            </VBox>
        </HBox>

        <HBox styleClass="form-row">
            <VBox styleClass="form-field-group" HBox.hgrow="ALWAYS">
                <Label styleClass="form-label" text="Age*" />
                <TextField fx:id="ageField" promptText="Enter age" />
            </VBox>
            <VBox styleClass="form-field-group" HBox.hgrow="ALWAYS">
                <Label styleClass="form-label" text="Phone Number*" />
                <TextField fx:id="phoneField" promptText="Enter your phone number" />
            </VBox>
        </HBox>

        <HBox styleClass="form-row">
            <VBox styleClass="form-field-group" HBox.hgrow="ALWAYS">
                <Label styleClass="form-label" text="Email*" />
                <TextField fx:id="emailField" promptText="Enter email address" />
            </VBox>
            <VBox styleClass="form-field-group" HBox.hgrow="ALWAYS">
                <Label styleClass="form-label" text="Emergency Contact*" />
                <TextField fx:id="emergencyContactField" promptText="Enter your phone number" />
            </VBox>
        </HBox>

        <VBox styleClass="form-field-group">
            <Label styleClass="form-label" text="Procedure*" />
            <TextField fx:id="procedureField" promptText="Enter procedure details" />
        </VBox>

        <VBox styleClass="form-field-group">
            <Label styleClass="form-label" text="Address*" />
         <TextField fx:id="procedureField1" promptText="Enter email address" />
        </VBox>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>
        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="cancel-button" text="Cancel" />
        <Button fx:id="addPatientButton" mnemonicParsing="false" onAction="#handleAddPatient" styleClass="add-button" text="Add Patient" />
    </HBox>
</VBox>
